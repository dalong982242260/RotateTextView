<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RotateTextView">
        <attr name="rotate_bg" format="integer"/>
        <attr name="rotate" format="integer"/>
    </declare-styleable>

    <attr name="titleText" format="string" />
    <attr name="titleTextSize" format="dimension" />
    <attr name="titleTextColors" format="color" />
    <attr name="titleRotate" format="integer" />
    <attr name="image" format="reference" />
    <attr name="imageScaleType">
        <enum name="fillXY" value="0" />
        <enum name="center" value="1" />
    </attr>

    <declare-styleable name="CustomImageView">
        <attr name="titleText" />
        <attr name="titleTextSize" />
        <attr name="titleTextColors" />
        <attr name="image" />
        <attr name="imageScaleType" />
        <attr name="titleRotate" />
    </declare-styleable>
</resources>